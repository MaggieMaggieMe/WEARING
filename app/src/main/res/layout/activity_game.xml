<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/title_5"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
            android:layout_weight="0.5"
        android:text="LEVEL 1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#A4D3EE"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:background="#CDCDCD"
        android:orientation="horizontal"
        android:layout_height="1dp"
        android:backgroundTint="@color/colorPrimaryDark"
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomlinear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="horizontal"
        android:background="#DCDCDC">

        <Button
            android:id="@+id/btn_first"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="19sp"
            android:textColor="#3A5FCD"
            android:text="发型"
            android:drawableTop="@drawable/ic_hair"
            android:paddingTop="5dp"
            android:drawablePadding="0dp"
            android:background="#fff"
            />
        <Button

            android:id="@+id/btn_second"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="19sp"
            android:textColor="#3A5FCD"
            android:text="上装"
            android:drawableTop="@drawable/ic_clothes"
            android:paddingTop="5dp"
            android:drawablePadding="0dp"
            android:background="#fff"/>
        <Button
            android:id="@+id/btn_third"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="19sp"
            android:textColor="#3A5FCD"
            android:text="下装"
            android:drawableTop="@drawable/ic_bottom"
            android:paddingTop="5dp"
            android:drawablePadding="0dp"
            android:background="#fff"/>
        <Button
            android:id="@+id/btn_four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="19sp"
            android:textColor="#3A5FCD"
            android:text="鞋子"
            android:drawableTop="@drawable/ic_shoe"
            android:paddingTop="9dp"
            android:drawablePadding="4dp"
            android:background="#fff"/>
        <Button
            android:id="@+id/btn_fifth"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="19sp"
            android:textColor="#3A5FCD"
            android:text="配饰"
            android:drawableTop="@drawable/ic_acc"
            android:paddingTop="6dp"
            android:drawablePadding="-2dp"
            android:background="#fff"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/cursorarea"
        android:layout_width="fill_parent"
        android:background="#CDCDCD"
        android:orientation="horizontal"
        android:layout_height="2dp"
        >
        <ImageView
            android:id="@+id/cursor_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cursor"
            >
        </ImageView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.8"
        android:orientation="vertical"
        android:background="@drawable/background">

        <android.support.v4.view.ViewPager
            android:id="@+id/myviewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent">

        </android.support.v4.view.ViewPager>

        <FrameLayout
            android:paddingTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/initial"
                >
            </ImageView>
            <Button
                android:id="@+id/go"
                android:layout_width="138dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/btn6"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="1dp"
                android:text="生成形象"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#3A5FCD"
                android:drawableRight="@drawable/ic_right"
                android:drawablePadding="-9dp"
                android:paddingRight="3dp"
                />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>